<!DOCTYPE html>
<html>
<head>
    <title>M.A.N.U.L. - MEGA DISTRICT V39</title>
    <style>
        body { margin: 0; background: #000; color: #00ff00; font-family: 'Courier New', monospace; overflow: hidden; }
        #interface {
            position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
            text-align: center; border: 2px solid #00ff00; padding: 40px; background: rgba(0,10,0,0.95);
            box-shadow: 0 0 30px #00ff00; z-index: 100;
        }
        .btn-load { display: inline-block; margin-top: 20px; padding: 15px 30px; border: 2px solid #00ff00; cursor: pointer; font-weight: bold; }
        .btn-load:hover { background: #00ff00; color: #000; }
        input[type="file"] { display: none; }
    </style>
</head>
<body>

    <div id="interface">
        <h1 style="letter-spacing: 10px;">MEGA DISTRICT V39</h1>
        <p>STATUS: SECTOR LOCKED. UPLOAD UNIT TO DEPLOY.</p>
        <label class="btn-load">
            DEPLOY M.A.N.U.L.
            <input type="file" id="file-selector" accept=".glb">
        </label>
    </div>

    <script type="importmap">
        { "imports": { 
            "three": "https://unpkg.com/three@0.160.0/build/three.module.js",
            "three/addons/": "https://unpkg.com/three@0.160.0/examples/jsm/" 
        } }
    </script>

    <script type="module">
        import * as THREE from 'three';
        import { GLTFLoader } from 'three/addons/loaders/GLTFLoader.js';
        import { PointerLockControls } from 'three/addons/controls/PointerLockControls.js';

        let scene, camera, renderer, robot, controls;
        let moveForward = false, moveBackward = false, moveLeft = false, moveRight = false;
        let velocity = new THREE.Vector3();
        let direction = new THREE.Vector3();

        function buildV39() {
            // Dark Industrial Fog
            scene.fog = new THREE.FogExp2(0x000500, 0.05);

            // Floor with Neon Paths
            const grid = new THREE.GridHelper(200, 40, 0x00ff00, 0x002200);
            scene.add(grid);

            // Procedural Skyscrapers
            const boxGeom = new THREE.BoxGeometry(1, 1, 1);
            for (let i = 0; i < 100; i++) {
                const material = new THREE.MeshPhongMaterial({ 
                    color: 0x111111, 
                    emissive: 0x00ff00, 
                    emissiveIntensity: Math.random() * 0.2 
                });
                const building = new THREE.Mesh(boxGeom, material);
                
                const w = 2 + Math.random() * 5;
                const h = 10 + Math.random() * 30;
                building.scale.set(w, h, w);
                
                // Position buildings away from the center spawn
                const angle = Math.random() * Math.PI * 2;
                const dist = 20 + Math.random() * 80;
                building.position.set(Math.cos(angle) * dist, h/2, Math.sin(angle) * dist);
                
                scene.add(building);
            }
        }

        function startEngine(fileUrl) {
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            
            renderer = new THREE.WebGLRenderer({ antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            document.body.appendChild(renderer.domElement);

            scene.add(new THREE.AmbientLight(0x404040, 1));
            const light = new THREE.PointLight(0x00ff00, 100, 50);
            light.position.set(0, 10, 0);
            scene.add(light);

            buildV39();

            const loader = new GLTFLoader();
            loader.load(fileUrl, (gltf) => {
                robot = gltf.scene;
                scene.add(robot);
                document.getElementById('interface').style.display = 'none';
                controls.lock();
            });

            controls = new PointerLockControls(camera, document.body);
            
            const onKeyDown = (e) => {
                if (e.code === 'KeyW') moveForward = true;
                if (e.code === 'KeyS') moveBackward = true;
                if (e.code === 'KeyA') moveLeft = true;
                if (e.code === 'KeyD') moveRight = true;
            };
            const onKeyUp = (e) => {
                if (e.code === 'KeyW') moveForward = false;
                if (e.code === 'KeyS') moveBackward = false;
                if (e.code === 'KeyA') moveLeft = false;
                if (e.code === 'KeyD') moveRight = false;
            };
            document.addEventListener('keydown', onKeyDown);
            document.addEventListener('keyup', onKeyUp);

            animate();
        }

        function animate() {
            requestAnimationFrame(animate);
            if (controls.isLocked) {
                const delta = 0.016;
                velocity.x -= velocity.x * 10.0 * delta;
                velocity.z -= velocity.z * 10.0 * delta;

                direction.z = Number(moveForward) - Number(moveBackward);
                direction.x = Number(moveRight) - Number(moveLeft);
                direction.normalize();

                if (moveForward || moveBackward) velocity.z -= direction.z * 400.0 * delta;
                if (moveLeft || moveRight) velocity.x -= direction.x * 400.0 * delta;

                controls.moveRight(-velocity.x * delta);
                controls.moveForward(-velocity.z * delta);

                if (robot) {
                    robot.position.copy(camera.position);
                    robot.position.y = 0; 
                    robot.rotation.y = camera.rotation.y + Math.PI;
                }
            }
            renderer.render(scene, camera);
        }

        document.getElementById('file-selector').onchange = (e) => {
            const file = e.target.files[0];
            if (file) startEngine(URL.createObjectURL(file));
        };
    </script>
</body>
</html>
